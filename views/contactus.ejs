<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/contact.css">
<body>
    <%- include('includes/navigation.ejs') %>
    <header class="main-header">
        <nav class="main-header__nav">
            <ul class="main-header__item-list">
                <li class="main-header__item"><a href="/">Home</a></li>
                <li class="main-header__item"><a href="/courses">Courses</a></li>
                <li class="main-header__item"><a href="/hire">Hire With Us</a></li>
                <li class="main-header__item"><a href="/pricing">Pricing</a></li>
                <li class="main-header__item"><a class="active" href="/contact">Contact Us</a></li>
                <li class="main-header__item"><a href="/register" class="button">Register Now</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <form class="contact-form" action="/contactus" method="POST">
            <h1>Book a Call</h1>
            <p>Book a call slot and our representatives will call you within 1 hour of the selected time slot.</p>
            <hr>
            <div class="form-control">
                <label for="name">Name:</label>
                <input type="text" name="name" id="name" required>
            </div>
            <div class="form-control">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" required>
            </div>
            <div class="form-control">
                <label for="phone">Phone:</label>
                <input type="tel" name="phone" id="phone" required>
            </div>
            <div class="form-control">
                <label for="date">Date:</label>
                <input type="date" name="date" id="date" required>

                <label for="time">Time:</label>
                <input type="time" name="time" id="time" required>
            </div>
            <button class="btn" type="submit">Get a Call</button>
        </form>
    </main>
    
    <%- include('includes/end.ejs') %>
</body>